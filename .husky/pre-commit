# Run type checking
echo "ğŸ” Running type check..."
npx tsc --noEmit || exit 1

# Run linting on staged TypeScript files (if any)
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM -- '*.ts' '*.tsx' 2>/dev/null | tr '\n' ' ')
if [ -n "$STAGED_TS_FILES" ]; then
  echo "ğŸ§¹ Running lint on staged TypeScript files..."
  # Note: Lint is non-blocking while pre-existing issues are addressed
  npx eslint $STAGED_TS_FILES || echo "âš ï¸ Lint issues found (non-blocking)"
else
  echo "ğŸ“ No TypeScript files staged, skipping lint"
fi

echo "âœ… Pre-commit checks passed!"
